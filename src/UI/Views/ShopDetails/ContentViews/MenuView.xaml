<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Views.ShopDetails.ContentViews.MenuView"
             xmlns:views="clr-namespace:UI.Views.ShopDetails.ContentViews"
             xmlns:shared="clr-namespace:UI.Views.SharedViews">
    <Grid Margin="15,0,15,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <views:MenuHeaderView Grid.Row="0" />
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Coffees}"
                        SelectionMode="None"
                        Margin="0,0,0,15">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                 Span="1"
                                 VerticalItemSpacing="15" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <shared:MenuItemView />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentView>
