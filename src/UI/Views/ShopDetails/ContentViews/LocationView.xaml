<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Views.ShopDetails.ContentViews.LocationView">
    <Border MinimumHeightRequest="240"
            StrokeThickness="0"
            StrokeShape="RoundRectangle 20">
        <Grid>
            <Image Source="map.png"
                   Aspect="AspectFill" />
            <VerticalStackLayout VerticalOptions="EndAndExpand"
                                 MinimumHeightRequest="50"
                                 Spacing="5"
                                 Padding="15"
                                 BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource SecondaryDark}}">
                <Label Text="3730 S Bond Ave, Portland, OR 97239"
                       FontSize="13"
                       FontFamily="{StaticResource PoppinsRegular}"
                       VerticalTextAlignment="Center" />
            </VerticalStackLayout>
        </Grid>
    </Border>
</ContentView>
